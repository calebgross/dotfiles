
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=20

# --------------------------------------------------
# Miscellaneous.
# --------------------------------------------------

[fprintd]
command=$HOME/.config/i3blocks/fprintd.sh
interval=1
signal=11

[cryfs]
command=$HOME/.config/i3blocks/cryfs.sh
interval=20
signal=1

[bluetooth]
command=$HOME/.config/i3blocks/bluetooth.sh
interval=20
signal=2


